---
interface Props {
  items: Array<{
    title: string;
    slug: string;
    icon?: string;
    order: number;
    items: Array<{
      title: string;
      href: string;
      order?: number;
      docId: string;
    }>;
  }>;
  currentPath: string;
}

const { items, currentPath } = Astro.props;
---

<nav class="sidebar-nav" aria-label="サイドバーナビゲーション">
  {items.map(category => (
    <div class="category">
      <h3 class="category-title">
        {category.icon && <span class="icon">{category.icon}</span>}
        {category.title}
      </h3>
      <ul class="doc-list">
        {category.items.map(doc => (
          <li>
            <a
              href={doc.href}
              class:list={['doc-link', { 'is-current': currentPath === doc.href }]}
              aria-current={currentPath === doc.href ? 'page' : undefined}
            >
              {doc.title}
            </a>
          </li>
        ))}
      </ul>
    </div>
  ))}
</nav>

<style>
  .sidebar-nav {
    padding: 1.5rem 1rem;
  }

  .category {
    margin-bottom: 2rem;
  }

  .category-title {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-secondary);
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .icon {
    font-size: 1rem;
  }

  .doc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .doc-list li {
    margin-bottom: 0.25rem;
  }

  .doc-link {
    display: block;
    padding: 0.5rem 0.75rem;
    color: var(--color-text);
    text-decoration: none;
    border-radius: 0.375rem;
    transition: all 0.2s ease;
    font-size: 0.875rem;
  }

  .doc-link:hover {
    background-color: var(--color-border);
    text-decoration: none;
  }

  /* キーボードフォーカス時の視覚的フィードバック */
  .doc-link:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
    background-color: var(--color-border);
  }

  /* 現在のページ表示 */
  .doc-link.is-current {
    background-color: var(--color-primary);
    color: #ffffff;
    font-weight: 500;
  }

  .doc-link.is-current:hover,
  .doc-link.is-current:focus {
    background-color: var(--color-primary);
  }
</style>
