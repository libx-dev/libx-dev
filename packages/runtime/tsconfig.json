{
  "extends": "../../config/tsconfig/base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "astro",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@docs/generator": ["../generator/src"],
      "@docs/ui": ["../ui/src"],
      "@docs/theme": ["../theme/src"],
      "@docs/i18n": ["../i18n/src"],
      "@docs/versioning": ["../versioning/src"]
    }
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}
