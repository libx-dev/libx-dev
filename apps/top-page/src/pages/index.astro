/**
 * ルートページ - デフォルト言語にリダイレクト
 */
import { getTopPageConfig } from '../lib/registry-loader';

// 設定を取得
const topPageConfig = await getTopPageConfig();
const defaultLang = topPageConfig.defaultLang;
const baseUrl = topPageConfig.baseUrl;

// リダイレクト先のURLを構築
const redirectUrl = `${baseUrl}/${defaultLang}/`;

// リダイレクト
return Astro.redirect(redirectUrl);
