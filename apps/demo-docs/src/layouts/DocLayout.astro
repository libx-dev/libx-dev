---
/**
 * demo-docs ドキュメントレイアウト
 * 共有UIコンポーネントとテーマを使用
 */
import { Navigation, Sidebar, Footer } from '@docs/ui/components';
import Search from '@docs/runtime/components/Search.astro';
import LanguageSelector from '../components/LanguageSelector.astro';
import '@docs/theme/css/variables.css';
import '@docs/theme/css/base.css';

interface Props {
  title: string;
  description?: string;
  lang: string;
  version: string;
  docId: string;
  projectId: string;
  sidebarItems?: any[];
}

const { title, description, lang, version, sidebarItems = [] } = Astro.props;

// メタデータ
const pageTitle = `${title} | Demo Documentation`;
const pageDescription = description || 'Demo documentation site using the new generator';
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{pageTitle}</title>
  <meta name="description" content={pageDescription} />

  <!-- OpenGraph -->
  <meta property="og:title" content={pageTitle} />
  <meta property="og:description" content={pageDescription} />
  <meta property="og:type" content="article" />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body>
  <!-- スキップリンク（アクセシビリティ改善） -->
  <a href="#main-content" class="skip-link">メインコンテンツへスキップ</a>

  <div class="layout">
    <!-- ナビゲーション -->
    <Navigation
      items={[]}
      siteTitle="Demo Documentation"
    >
      <!-- 言語セレクターをスロットに渡す -->
      <LanguageSelector
        slot="language-selector"
        currentLang={lang}
        version={version}
      />
    </Navigation>

    <!-- 検索 -->
    <div class="search-wrapper">
      <Search />
    </div>

    <div class="main-container">
      <!-- サイドバー -->
      <aside class="sidebar-container">
        <Sidebar
          items={sidebarItems}
          title="Demo Documentation"
        />
      </aside>

      <!-- メインコンテンツ -->
      <main class="content-container" id="main-content">
        <slot />
      </main>
    </div>

    <!-- フッター -->
    <Footer />
  </div>
</body>
</html>

<style is:global>
  :root {
    font-family: system-ui, -apple-system, sans-serif;
  }

  body {
    margin: 0;
    padding: 0;
  }

  /* スキップリンク（アクセシビリティ） */
  .skip-link {
    position: absolute;
    top: -40px;
    left: 0;
    padding: 0.75rem 1rem;
    background-color: var(--color-bg-accent, #0066cc);
    color: var(--color-text-inverse, #ffffff);
    text-decoration: none;
    font-weight: 600;
    z-index: 1000;
    border-radius: 0 0 0.25rem 0;
    transition: top 0.2s ease-in-out;
  }

  .skip-link:focus {
    top: 0;
    outline: 2px solid var(--color-focus, #ff6b00);
    outline-offset: 2px;
  }

  .layout {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .search-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
    padding: 1rem 2rem;
    display: flex;
    justify-content: center;
  }

  .main-container {
    display: flex;
    flex: 1;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
  }

  .sidebar-container {
    width: 280px;
    flex-shrink: 0;
    position: sticky;
    top: 4rem;
    height: calc(100vh - 4rem);
    overflow-y: auto;
    border-right: 1px solid #e5e7eb;
  }

  .content-container {
    flex: 1;
    min-width: 0;
  }

  @media (max-width: 768px) {
    .sidebar-container {
      display: none;
    }

    .search-wrapper {
      padding: 1rem;
    }
  }
</style>
